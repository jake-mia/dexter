
<div class="scrollingthing" data-spy="scroll">
<div id="outter-dexter">
<div class="splashlogin" id="inner">
<h1>Signup!</h1>
<%= form_for :user, url: '/users' do |f| %>
<div class="form-group">
  <b>firstname</b> <%= f.text_field :firstname, class: 'form-control', placeholder: "firstname", autofocus: true %>
</div>
<div class="form-group">
  <b>lastname</b> <%= f.text_field :lastname, class: 'form-control', placeholder: "lastname" %>
</div>
<div class="form-group">
  <b>email</b> <%= f.text_field :email, class: 'form-control', placeholder: "email" %>
</div>
<div class="form-group">
  <b>phone XXX-XXX-XXXX</b> <%= f.text_field :phone, class: 'form-control', placeholder: "phone" %>
</div>
<div class="form-group">
  <b>Password</b> <%= f.password_field :password, class: 'form-control', placeholder: "password" %>
</div>
<div class="form-group">
  <b>Password Confirmation</b> <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "password" %>
</div>
<div class="form-group">
  <%= f.submit "submit", class: 'btn btn-default btn-lg btn-submit'%>
  <%= link_to "cancel", '/', class: 'btn btn-default btn-lg'%>
</div>
<% end %>
</div>
</div>
</div>
<br><br><center><%= notice %></center>
