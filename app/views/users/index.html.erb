<% if current_user %>
  <div class="row">
    <div class="dexter-two">
      <%= current_user.firstname.capitalize %>
      <%= current_user.lastname.capitalize %> | <%= link_to "Logout", '/logout' %>
    </div>
  <div class="dexter-button">
    <a href="/userchallenges">
      <i class="fa fa-plus-circle fa-4x"></i>
    <div class="dexter-one">
      Add A<br>Challenge
    </div>
  </a>
  </div>

<% if current_user %>
  <div class="challenge-links">
    <% @challenges.each do |chal| %>
      <%#= chal.user_id %>
      <i class="fa fa-check-circle fa-4x" aria-hidden="true"></i>
      <%= link_to chal.name, challenge_steps_path(chal)  %><br><br>
    <% end %>
  </div>

  <%#= render 'dexter-default' %>
  <%= render 'sad-dexter' %>
<% end %>
<% else %>
  <%#= link_to 'Login', '/login' %>  <%#= link_to 'Signup', '/signup' %>
<% end %>


<% if !current_user %>
<div class="front-block"></div>
<div class="login-background"></div>
<h2 class="welcome">Welcome Back!</h2>
  <div class="login-button"><%= link_to "LOGIN", '/login', :class=>"log-buttons"%></div>
  <h2 class="join">Join the Challenge!</h2>
  <div class="logout-button"><%= link_to "SIGNUP", '/signup', :class=>"log-buttons"%></div>
<% end %>
