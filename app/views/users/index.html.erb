
<% if current_user %>
  <div class="row">
    <div class="dexter-two">
      <%= current_user.firstname.capitalize %>
      <%= current_user.lastname.capitalize %> | <%= link_to "Logout", '/logout' %>
    </div>
  <div class="dexter-button">
    <a href="/challenges">
      <i class="fa fa-plus-circle fa-4x"></i>
    <div class="dexter-one">
      Add A<br>Challenge
    </div>
  </a>
  </div>


<% else %>
  <%#= link_to 'Login', '/login' %>  <%#= link_to 'Signup', '/signup' %>
<% end %>


<div class="dexter-img"><%= render 'dexter-main' %>


<% if !current_user %>
  <div class="login-button"><%= link_to "login", '/login', class: 'btn btn-default btn-lg btn-submit'%></div>
  <div class="logout-button"><%= link_to "signup", '/signup', class: 'btn btn-default btn-lg'%></div>
<% end %>
