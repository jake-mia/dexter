<p id="notice"><%= notice %></p>
<h1>Steps</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Challenge</th>
      <th>Name</th>
      <th>Description</th>
      <th>Complete_by<th>
      <th>Completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @steps.each do |step| %>
      <tr>
        <td><%= step.challenge_id %></td>
        <td><%= step.name %></td>
        <td><%= step.description %></td>
        <td><%= step.complete_by %></td>
        <td><%= step.completed %></td>
        <td><%#= link_to 'Show', challenge_step_path(step) %></td>
        <td><%#= link_to 'Edit', edit_step_path(step) %></td>
        <td><%= link_to 'Destroy', step, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Step', new_step_path %><br>
